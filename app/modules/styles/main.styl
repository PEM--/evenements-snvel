@import 'modules/styles/colors.import.styl'

defaultFont = 'San Francisco', 'Helvetica Neue', Roboto, Helvetica, Arial, sans-serif

// Global settings
html, #react-root
  min-height 100vh
html, body
  margin 0
  padding 0
  width 100%
  font-weight 300
  font-family defaultFont
  background cream
  background-attachment fixed
  color cream

*, *::after, *::before
  // Globally set the sizing behavior
  box-sizing border-box
  // Ensure font's antialising
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-touch-callout none
  // Remove outlining
  outline none
  // Mobile specific for iOS and Android: removes text selection
  -webkit-tap-highlight-color rgba(0,0,0,0)
  // Accelerate scrolling
  backface-visibility hidden
  &:hover, &:focus, &:active
    outline none

@font-face {
  font-family: 'Impact';
  src: url('/fonts/unicode.impact-webfont.eot');
  src: url('/fonts/unicode.impact-webfont.eot?#iefix') format('embedded-opentype'),
       url('/fonts/unicode.impact-webfont.woff2') format('woff2'),
       url('/fonts/unicode.impact-webfont.woff') format('woff'),
       url('/fonts/unicode.impact-webfont.ttf') format('truetype'),
       url('/fonts/unicode.impact-webfont.svg#impactregular') format('svg');
  font-weight: normal;
  font-style: normal;
}

// Default typography
b, strong
  font-weight 600
h1, h2, h3, h4, h5, h6
  font-family Impact, defaultFont
  font-weight 400
p
  font-weight 200
  margin-bottom 16px
  line-height 20px
h1
  font-size 30px
  margin 8px 0
h2
  font-size 24px
  margin 8px 0
h3
  font-size 22px
  margin-bottom 6px
h4
  font-size 20px
  margin-bottom 4px
h5
  font-size 18px
  margin-bottom 2px
h6, p, ul, li, div
  font-size 16px
  line-height 20px
