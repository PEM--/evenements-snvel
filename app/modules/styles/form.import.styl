@import 'modules/styles/axis.import.styl'

form
  border 1px solid alpha(orange, .5)
  border-radius $radius
  padding 5px
  background alpha(cream, 5%)
  text-shadow 0 0 2px black
  &.error
    field-error()

form button, .btn
  button(cream, 15px, darkViolet)
  click-down()
  border-radius $radius
  margin-right 10px
  transition color defaultTransition,
    background-color defaultTransition,
    opacity defaultTransition
  &.primary
    button(orange, 15px, cream)
  &:disabled
    opacity .4
    font-weight 200
    italic()
    &.primary
      color darkViolet

+html5-inputs()
  autofill(alpha(orange, 30%), darkViolet)
  input orange
  padding 5px
  background-color cream
  border-color alpha(orange, 50%)
  color darkViolet
  margin-bottom 5px
  font-weight 400
  transition color defaultAnimation,
    border-color defaultAnimation,
    margin-bottom defaultAnimation,
    background-color defaultAnimation
  border-width 2px
  &:focus
    border-width 2px
    background-color white

form.error
  +html5-inputs()
    margin-bottom 25px
    border-width 2px
    &:focus
      border-width 2px

fieldset
  border 1px solid alpha(cream, .5)
  border-radius $radius
  padding 5px
  background alpha(cream, 5%)
  margin-bottom 5px

label
  font-weight 400
  font-size 14px
  margin-right 10px

fieldset.multiline
  label
    display block

input[type='checkbox']
  position absolute
  left -9999px
  & + label
    display block
    position relative
    margin 10px 0
    padding-left 25px
    cursor pointer
    no-select()
    &::before, &::after
      position absolute
    &::before
      top 2px
      left 0
      width 16px
      height 16px
      border-radius $radius
      border 2px solid cream
      background transparent
      content ' '
      transition border-color defaultTransition
    &::after
      top 4px
      left 2px
      width 12px
      height 12px
      background transparent
      color cream
      font-family FontAwesome
      content '\f00c'
      line-height 11px
      transition transform defaultTransition, background-color .3s .3s ease-in-out
      transform scale3d(0, 0, 1)
  &:checked + label::after
    background orange
    transform scale3d(1, 1, 1)
  &:focus + label::before
    border-color mix(orange, cream)

input[type='radio']
  position absolute
  left -9999px
  & + label
    display block
    position relative
    margin 10px 0
    padding-left 25px
    cursor pointer
    no-select()
    &::before, &::after
      position absolute
      border-radius 50%
    &::before
      top 2px
      left 0
      width 16px
      height 16px
      border 2px solid cream
      background transparent
      content ' '
      transition border-color defaultTransition
    &::after
      top 4px
      left 2px
      width 12px
      height 12px
      background transparent
      color cream
      font-family FontAwesome
      content '\f111'
      font-size 8px
      padding 3px
      line-height 7px
      transition transform defaultTransition, background-color .3s .3s ease-in-out
      transform scale3d(0, 0, 1)
  &:checked + label::after
    background orange
    transform scale3d(1, 1, 1)
  &:focus + label::before
    border-color mix(orange, cream)
