// Default typography
b, strong
  font-weight 600
h1, h2, h3, h4, h5, h6
  font-family Impact, defaultFont
  font-weight 400
p
  font-weight 200
  margin-bottom 16px
  line-height 20px
  text-align justify
h1
  font-size 30px
  margin 8px 0
  line-height 32px
h2
  font-size 24px
  margin 8px 0
  line-height 26px
h3
  font-size 22px
  margin-bottom 6px
  line-height 24px
h4
  font-size 20px
  margin-bottom 4px
  line-height 22px
h5
  font-size 18px
  margin-bottom 2px
  line-height 20px
h6, p, ul, li, div
  font-size 16px
  line-height 20px
ul
  list-style none
  padding 0
  margin 0
  li
    padding-left 1.5em
    text-indent -.7em
    &:before
      content "â€¢ "
      color orange
ol
  ol()

// Text selection
h1, h2, h3, h4, h5, h6, label, div, p, li, table
  text-selection(orange, darkViolet)
