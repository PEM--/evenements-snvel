// Tables
table, table.table
  table(orange, false)
  border-color orange
  thead th
    text-shadow 0 0 2px black
    background orange
    transition background-color defaultTransition
    color cream
  tbody
    text-shadow 0 0 2px black
    tr
      transition background-color defaultTransition
      &:hover
        background-color alpha(cream, 10%)
      &:nth-child(even) td
        background-color alpha(cream, 5%)
  tfoot, .footer-container
    background mix(orange, cream)
    color darkViolet

table.table
  thead th
    cursor pointer
    &:hover
      background lighten(orange, 10%)
  .footer-container
    padding 4px
    text-align center
    text-shadow none
    font-size 90%
    color darkViolet
    select
      border 2px solid darkViolet
      color darkViolet
      border-radius 16px
      background-color transparent
