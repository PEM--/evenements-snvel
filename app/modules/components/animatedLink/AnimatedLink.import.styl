@import 'modules/styles/axis.import.styl'

// Links with an animated underline on hovering
.AnimatedLink
  font-weight 900
  text-decoration none
  position relative
  transition color .3s ease-in-out
  position relative
  &::after
    content ' '
    position absolute
    bottom 0
    left 0
    width 100%
    height 1px
    transform scale3d(0, 1, 1)
    transition transform .3s ease-in-out
  // Animated underline links
  &:hover
    &::after
      transform scale3d(1, 1, 1)
  &.basic
    color orange
    &::after
      background-color orange
    &:hover
      color lighten(orange, 20%)
  &.cream
    color cream
    &::after
      background-color cream
    &:hover
      color lighten(cream, 20%)
