.password
  margin-bottom 10px
  .strength
    display inline-block
    width 14px
    height 14px
    transition background-color defaultTransition, border-color defaultTransition
    border 1px solid darken(red, 30%)
    border-radius 50%
    background red
    &.weak
      background-color red
      border-color darken(red, 30%)
    &.notEnough
      background-color orange
      border-color darken(orange, 30%)
    &.better
      background-color yellow
      border-color darken(yellow, 30%)
    &.strong
      background-color green
      border-color darken(green, 30%)
  .hint
    margin -6px 0 0 15px
    font-size 80%
    line-height 80%
    italic()

@media only screen and (max-width: 800px)
  .password
    .formGroup
      width calc(100% - 26px)
    .strength
      margin-top 18px
