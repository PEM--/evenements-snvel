// Global settings
html, #react-root
  min-height 100vh
html, body
  margin 0
  padding 0
  width 100%
  font-weight 300
  font-family 'Helvetica Neue', Roboto, Arial, sans-serif
  background #262a3f
  color #fff8e4

*, *::after, *::before
  // Globally set the sizing behavior
  box-sizing border-box
  // Ensure font's antialising
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-touch-callout none
  // Remove outlining
  outline none
  // Mobile specific for iOS and Android: removes text selection
  -webkit-tap-highlight-color rgba(0,0,0,0)
  // Accelerate scrolling
  backface-visibility hidden
  &:hover, &:focus, &:active
    outline none

@font-face {
  font-family: 'Impact';
  src: url('../../../public/fonts/unicode.impact-webfont.eot');
  src: url('../../../public/fonts/unicode.impact-webfont.eot?#iefix') format('embedded-opentype'),
       url('../../../public/fonts/unicode.impact-webfont.woff2') format('woff2'),
       url('../../../public/fonts/unicode.impact-webfont.woff') format('woff'),
       url('../../../public/fonts/unicode.impact-webfont.ttf') format('truetype'),
       url('../../../public/fonts/unicode.impact-webfont.svg#impactregular') format('svg');
  font-weight: normal;
  font-style: normal;
}

// Default typography
h1, h2, h3, h4, h5, h6
  font-family Impact
  font-weight 300
p
  font-weight 100
