.Subscribe
  table
    .title
      max-width 100%
      width 100%
      h1.event
        display inline-block
        font-weight normal
        font-size 16px
        line-height 18px
        color orange
        margin 0
        .session:before
          content '-'
          color mix(cream, orange)
          margin-left 12px
          margin-right 12px
      .conference
        margin 0
      .description
        margin 0
        font-size 10px
        line-height 12px
        font-style italic
      .moderator, .speakers, .hours
        margin 0
        i
          width 18px
          margin-right 11px
          color mix(cream, orange)
        span
          font-size 11px
          font-weight bold
      .hours
        margin 0
        .date, .begin, .end
          display inline-block
          color mix(cream, orange)
        .date, .begin
          &:after
            color orange
            content '-'
            margin-left 10px
            margin-right 10px
    .price
      font-family monospace
    input[type='checkbox'], label
      margin-top 0
    thead tr th, tbody tr td
      &:nth-child(2)
        width 120px
      &:nth-child(3)
        width 150px

// Remove the price column on small screens
@media only screen and (max-width: 490px)
  .Subscribe table
    max-width 100%
    thead tr th, tbody tr td
      &:nth-child(2)
        display none
      &:nth-child(2)
        background yellow
        width 100px
    label
      width 14px
      overflow-x hidden

@media only screen and (max-width: 320px)
  .Subscribe
    table
      thead
        display none
      table, tbody, tr, td
        border none
      table, tbody, tr, td
        dislay block
    thead tr th, tbody tr td
