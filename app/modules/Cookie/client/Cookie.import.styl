.Cookie
  position fixed
  width 100%
  background orange
  color cream
  z-index 1000
  box-shadow 0 0 20px black
  .CookieDisclaimer
    padding 10px 0
    display flex
    flex-direction row
    flex-wrap nowrap
    margin 0 auto
    max-width 960px
    padding 10px
    >i
      display block
      font-size 24px
      text-align center
      color red
      width 40px
      margin-right 10px
      &:before
        display block
        border-radius 50%
        padding 4px
        background cream
        box-shadow 0 0 2px 2px alpha(black, 30%)
        width inherit
        height 40px
        line-height 32px
    .content
      width calc(100% - 50px)
    p
      font-size 18px
      font-weight 500
    button
      margin-right 10px
