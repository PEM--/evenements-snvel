.Admin
  form
    margin-bottom 10px
  .griddle table tbody tr.standard-row td
    cursor pointer

.AdminUser
  .content
    display flex
    .profile
      flex 0 0 auto
      border 2px solid cream
      border-radius $radius
      background alpha(cream, 10%)
      margin-top 30px
      padding 30px 15px 15px 15px
      position relative
      &:before
        position absolute
        top -30px
        left calc(50% - 30px)
        width 60px
        height 60px
        border 2px solid cream
        border-radius 50%
        font-family FontAwesome
        font-size 40px
        line-height 60px
        content '\f007'
        text-align center
        background darkViolet
      .address, .email
        position relative
        margin-left 30px
        &:before
          position absolute
          left -30px
          color orange
          font-family FontAwesome
      .address:before
        content '\f015'          
      .email:before
        content '\f003'
         
    