.Invoice
  h2, h3, .receipt
    text-align center
  h2, h3
    color mix(orange, cream)
  .receipt
    border 1px solid orange
    border-radius $radius
    background-color cream
    color darkViolet
    font-family monotype
    font-size 12px
    width 240px
    margin 0 auto 15px auto
    padding 1em .5em
