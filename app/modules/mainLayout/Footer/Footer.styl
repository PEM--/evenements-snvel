@import 'modules/styles/colors.import'

footer
  margin-top 10px
  nav
    align-items center
    padding 10px 0
    .BasicPagesLinks
      .BasicPagesLink
        display inline-block
        margin-right 20px
    .SocialLinks
      text-align right
      font-size 140%
      a, a:visited
        color cream
        margin-left 20px
        display inline-block
        transition color .3s ease-in-out, transform .3s ease-in-out
        &:hover
          color white
          transform scale3d(1.2, 1.2, 1)
