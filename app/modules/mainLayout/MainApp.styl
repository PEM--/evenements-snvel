@import 'modules/styles/colors.import.styl'

.MainContent
  overflow-x hidden
  background darkViolet
  background radial-gradient(ellipse at center, darkViolet 0%, darken(darkViolet, 15%) 100%);
  border-radius 3px
  min-height calc(100vh - 125px)
  margin 5px 10px 10px 10px
  padding 10px
  box-shadow 0px 5px 15px black

@media only screen and (max-width: 960px)
  .MainContent.maximized, header .maximized, footer .maximized
    width calc(100% - 20px)
    margin-left 10px
    margin-right 10px

@media only screen and (max-width: 800px)
  footer
    nav
      padding 20px 0
      align-items center
      text-overflow ellipsis
      >div:first-of-type
        flex 1 1 auto
        width inherit
        margin-right 0
        width calc(100% - 70px)
        text-overflow ellipsis
        .BasicPagesLinks
          display block
          width 100%
          padding-bottom 10px
          margin-right 0
          a
            width inherit
            display block
            overflow-x hidden
            white-space nowrap
            text-overflow ellipsis
      .SocialLinks
        width 70px
        font-size 135%
        a
          display inline-block
          margin-left 0
          width 50%
          text-align center
          &:nth-child(1), &:nth-child(2)
            padding-bottom 10px
