extends ../includes/layout.jade

block body
  +layout
    // Header
    include ../partials/header.jade
    // Body
    +body
      +container()(class='main-content')
        +row()
          +columns('twelve', 'last')
            td.text-pad
              h3 HTML_TEMPLATE_ACTION_TITLE
        +row()
          +columns('twelve', 'last')
            td.center.text-pad
              p Nous vous remercions de bien vouloir confirmer votre adresse email en cliquant sur le bouton ci-dessous.
        +row()
          +columns('twelve', 'last')
            td.center.text-pad
              p En effet, nous avons besoin de vous envoyer des informations importantes pour le bon fonctionnement de notre service. Ce dernier ne peut fonctionner sans une adresse email valide.
        +row()(class='button-wrapper')
          +columns ('seven', 'last')
            td.center.text-pad
              a(href='HTML_TEMPLATE_ACTION_VALIDATE_URL')
                +button('Je confirme mon email')(style="large-button radius")
        +row()
          +columns('twelve', 'last')
            td.center.text-pad
              include ../partials/signature.jade
              p &nbsp;
    // Footer
    include ../partials/footer.jade
