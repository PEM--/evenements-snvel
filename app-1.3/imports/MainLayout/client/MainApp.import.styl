.MainContent
  background radial-gradient(ellipse at center, darkViolet 0%, darken(darkViolet, 15%) 100%);
  border-radius 3px
  min-height calc(100vh - 148px)
  margin 5px auto 10px auto
  padding 10px
  box-shadow 0px 5px 15px black

@media only screen and (max-width: 990px)
  .maximized
    width calc(100% - 60px)

@media only screen and (max-width: 800px)
  .MainContent
    min-height calc(100vh - 217px)
  footer nav
    padding 20px 0
    text-overflow ellipsis
    .BasicPagesLinks
      width inherit
      margin-right 0
      width calc(100% - 80px)
      .BasicPagesLink
        display block
        width 100%
        padding-bottom 10px
        margin-right 0
        overflow-x hidden
        white-space nowrap
        a
          display inline-block
          text-overflow ellipsis
          overflow-x hidden
          max-width 100%
    .SocialLinks
      width 80px
      a
        width 50%
        text-align center
        font-size 26px
        &:nth-child(1), &:nth-child(2)
          padding-bottom 20px

@media only screen and (min-width: 801px)
  footer nav .SocialLinks a
    margin-left 20px
